<resources>
    <!-- Base application theme. -->
    <style name="Theme.TestTask" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_pink</item>
        <item name="colorPrimaryVariant">@color/main_gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/menu_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
        <item name="colorOnSecondaryContainer">?attr/colorPrimary</item>
        <item name="colorOnSurfaceVariant">@color/menu_gray</item>

    </style>
</resources>